<form method="POST" action="/cause/<%= @cause.id %>/edit">
<input id="hidden" type="hidden" name="_method" value="patch">

<h3><label>Cause Name:</label></h3>
<input id="cause_name" type="text" name="cause[name]" value="<%= @cause.name %>" >
<br>
<br>
<h3><label>Description:</label></h3>
<textarea id="cause_description" type="text" name="cause[description]"><%= @cause.description %></textarea>
<br>
<br>
<h3><label>Amount Needed:</label></h3>
<input id="cause_funding" type="number" name="cause[funding]" value="<%= @cause.funding %>">
<br>
<br>
<h3><label>Choose a category:</label></h3>
  <% if @cause.category == nil %>
    <p></p>
  <% else %>
    <p>Current category: <%= @cause.category.name %></p>
  <% end %>
<% Category.all.each do |category| %>
  <p><input id="title_<%= category.id %>" name="cause[category_id]" type="radio" value="<%= category.id %>"> <%= category.name %></p>
<% end %>
<label>Create a New Category:</label>
<input id="category[name]" type="text" name="new_category">
<br>
<br>
<input type="submit" value="Update the Cause">
</form>